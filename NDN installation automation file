apt-get update
sudo apt-get ins software-properties-common
git clone https://github.com/named-data/ndn-cxx
git clone --recursive https://github.com/named-data/NFD
sudo apt-get install build-essential pkg-config libboost-all-dev                                                                                  libsqlite3-dev libssl-dev libpcap-dev
apt-get update
sudo apt-get install build-essential pkg-config libboost-all-dev                                                                                                   libsqlite3-dev libssl-dev libpcap-dev
sudo apt-get install build-essential libsqlite3-dev libboost-all-dev libs                                                                        sl-dev
echo /usr/local/lib | sudo tee /etc/ld.so.conf.d/ndn-cxx.conf
cd ndn-cxx/
./waf configure
./waf
sudo ./waf install
sudo ldconfig
cd ..
cd NFD/
export PKG_CONFIG_PATH=/custom/lib/pkgconfig:$PKG_CONFIG_PATH
./waf configure
./waf
sudo ./waf install
CXXFLAGS="-O2" ./waf configure --prefix=/usr --sysconfdir=/etc
./waf
sudo ./waf install
sudo cp /usr/local/etc/ndn/nfd.conf.sample /usr/local/etc/ndn/nfd.conf
nfd-start
nfd-status

#NDNPERF installation
git clone https://github.com/Kanemochi/ndnperf.git
cd ndnperf/c++/server/
g++ -o ndnperfserver server.cpp -std=c++11 -O2 -lndn-cxx -lboost_system -                                                                             lboost_filesystem -lboost_thread -lpthread

#NDN Tools 
git clone https://github.com/named-data/ndn-tools.git
cd ndn-tools/
